/* pages/message/message.wxss */
page{
  background: #f1f1f1
}
.card{
  border: 1px solid #ccc;
  border-radius: 3px;
  font-size: 14px;
  padding: 30rpx;
  margin: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.card-title{
  font-size: 18px;
  margin-bottom: 20rpx;
}
.card-time{
  font-size: 14px;
  color: #666;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ddd
}
.card-img{
  width: 100%;
  height: 300rpx
}
.card-desc{
  font-size: 14px;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
  margin: 20rpx 0
}